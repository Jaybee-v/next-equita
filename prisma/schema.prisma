datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String
  lastname      String?
  email         String?   @unique
  emailVerified DateTime?
  role          String    @default("rider")
  password      String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
